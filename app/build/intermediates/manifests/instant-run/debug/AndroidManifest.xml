<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.controlador.pfc"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="26" /> <!-- fin de permisos -->


    <!-- permisos de internet y wifi -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission
        android:name="com.controlador.pfc.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.controlador.pfc.permission.C2D_MESSAGE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:testOnly="true"
        android:theme="@style/miEstilo" >
        <activity
            android:name="com.controller.Login"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.controller.administrator.SignUpAdmin"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Registrar centro" />
        <activity
            android:name="com.controller.carers.SignUpDependentPerson"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name="com.controller.carers.DeleteDependentPerson"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Borrar persona dependiente" />
        <activity
            android:name="com.controller.carers.MainActivityCarers"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name="com.controller.mentors.MainActivityMentor"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Familiar" />
        <activity
            android:name="com.controller.administrator.MainActivityAdmin"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Administrador" />
        <activity
            android:name="com.controller.carers.ViewPagerAlerts"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Alertas" />
        <activity
            android:name="com.controller.Chat"
            android:label="Chat" />
        <activity
            android:name="com.controller.administrator.DeleteCarer"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Borrar cuidadores" />
        <activity
            android:name="com.controller.carers.ListDependentPeople"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name="com.controller.carers.DiaryCarers"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name="com.controller.mentors.DiaryMentor"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Diario" />
        <activity
            android:name="com.controller.mentors.AlertsMentor"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Alertas" />
        <activity android:name="com.controller.carers.CarerAlerts" />
        <activity
            android:name="com.controller.administrator.DeleteGroup"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Seleccione el grupo a borrar" />
        <activity
            android:name="com.controller.administrator.CreateGroup"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Crear Grupo" />
        <activity
            android:name="com.controller.administrator.SignUpCarer"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:parentActivityName="com.controller.administrator.MainActivityAdmin" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0" />

        <receiver
            android:name="com.google.android.gms.measurement.AppMeasurementReceiver"
            android:enabled="true"
            android:exported="false" >
        </receiver>
        <receiver
            android:name="com.google.android.gms.measurement.AppMeasurementInstallReferrerReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.INSTALL_PACKAGES" >
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.google.android.gms.measurement.AppMeasurementService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name="com.google.android.gms.measurement.AppMeasurementJobService"
            android:enabled="true"
            android:exported="false"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <receiver
            android:name="com.google.firebase.iid.FirebaseInstanceIdReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.controlador.pfc" />
            </intent-filter>
        </receiver>
        <!--
 Internal (not exported) receiver used by the app to start its own exported services
             without risk of being spoofed.
        -->
        <receiver
            android:name="com.google.firebase.iid.FirebaseInstanceIdInternalReceiver"
            android:exported="false" />
        <!--
 FirebaseInstanceIdService performs security checks at runtime,
             no need for explicit permissions despite exported="true"
        -->
        <service
            android:name="com.google.firebase.iid.FirebaseInstanceIdService"
            android:exported="true" >
            <intent-filter android:priority="-500" >
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <provider
            android:name="com.google.firebase.provider.FirebaseInitProvider"
            android:authorities="com.controlador.pfc.firebaseinitprovider"
            android:exported="false"
            android:initOrder="100" />

        <activity
            android:name="com.google.android.gms.common.api.GoogleApiActivity"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <provider
            android:name="android.arch.lifecycle.LifecycleRuntimeTrojanProvider"
            android:authorities="com.controlador.pfc.lifecycle-trojan"
            android:exported="false"
            android:multiprocess="true" />

        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.controlador.pfc.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>